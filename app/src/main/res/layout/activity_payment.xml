<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Card Number:"
                    android:id="@+id/textView0"
                    android:layout_column="0"
                    android:layout_span="9"
                    android:layout_marginBottom="20dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardNumberField0"
                    android:layout_column="10"
                    android:layout_span="6"
                    android:text="4242"
                    android:inputType="number"
                    android:dig
                    android:textAlignment="center"
                    android:digits="4"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardNumberField1"
                    android:layout_column="16"
                    android:layout_span="6"
                    android:text="4242"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:digits="4"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardNumberField2"
                    android:layout_column="21"
                    android:layout_span="6"
                    android:text="4242"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:digits="4"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardNumberField3"
                    android:layout_column="11"
                    android:layout_span="6"
                    android:text="4242"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:digits="4"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_span="32"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView1"
                    android:layout_column="0"
                    android:layout_span="10"
                    android:text="Exp Month:" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/expMonthField"
                    android:layout_column="10"
                    android:layout_span="4"
                    android:text="12"
                    android:inputType="number"
                    android:layout_gravity="end"
                    android:textAlignment="viewEnd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Year:"
                    android:id="@+id/textView"
                    android:layout_column="18"
                    android:layout_span="6" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/expYearField"
                    android:layout_column="20"
                    android:layout_span="5"
                    android:inputType="number"
                    android:text="2016"
                    android:layout_gravity="end"
                    android:textAlignment="viewEnd" />
            </TableRow>

            <TableRow android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_span="34"
                    android:layout_column="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp">

                <View android:id="@+id/lineDivider"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10px"
                    android:paddingBottom="5px"
                    android:layout_height="2dp"
                    android:layout_width="wrap_content"
                    android:background="#000000"
                    android:layout_column="1"
                    android:layout_span="32" />

        </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tip Amount"
                    android:id="@+id/textView2"
                    android:layout_column="1"
                    android:layout_span="32"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="$"
                    android:id="@+id/textView4"
                    android:textSize="40dp"
                    android:layout_column="6"
                    android:layout_span="4"
                    android:textAlignment="center"
                    android:layout_marginTop="25dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/tipDollarsField"
                    android:layout_column="10"
                    android:layout_span="6"
                    android:digits="2"
                    android:text="1"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:textSize="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="."
                    android:id="@+id/textView3"
                    android:layout_gravity="bottom"
                    android:textSize="40dp"
                    android:layout_column="16"
                    android:layout_span="3"
                    android:textAlignment="center" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/tipCentsField"
                    android:layout_column="18"
                    android:layout_span="6"
                    android:digits="2"
                    android:text="25"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    android:textSize="40dp" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <Button
                    android:background="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIP IT!"
                    android:onClick="tipIt"
                    android:id="@+id/button"
                    android:layout_column="1"
                    android:layout_span="32"
                    android:textSize="30dp"
                    android:layout_marginTop="30dp" />
            </TableRow>
        </TableLayout>

    </TableLayout>
</LinearLayout>
